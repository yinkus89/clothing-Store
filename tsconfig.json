{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts", // Keep including all files inside src
    "src/prisma/**/*.ts" // Explicitly include all files inside prisma
  ],
  "exclude": ["node_modules", "dist"]
}
