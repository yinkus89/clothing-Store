{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "types"],
    "types": ["node", "jest"] // Only one "types" array is needed
  },
  "include": ["src/**/*.ts", "types/**/*.d.ts", "../backend/src/server.ts"],
  "exclude": ["node_modules"]
}
